{
  "manifest_version": 3,
  "name": "ChatBridge",
  "version": "0.2.0",
  "description": "Manually scan your visible AI chat session and paste it into another AI chat. Local-only by default.",
  "permissions": ["storage", "activeTab", "scripting", "clipboardWrite", "prompt"],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
  "matches": [
  "*://chat.openai.com/*",
  "*://chatgpt.com/*",
  "*://*.chatgpt.com/*",
    "*://gemini.google.com/*",
    "*://claude.ai/*",
    "*://chat.mistral.ai/*",
    "*://deepseek.ai/*",
    "*://www.perplexity.ai/*",
    "*://*.poe.com/*",
    "*://*.x.ai/*",
    "*://copilot.microsoft.com/*",
    "*://www.bing.com/*",
    "*://meta.ai/*",
    "*://*/*"
  ],
      "js": ["adapters.js", "storage.js", "content_script.js"],
      "css": ["styles.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "options_page": "options.html",
  "icons": {
    "128": "icons/icon128.png"
  }
}