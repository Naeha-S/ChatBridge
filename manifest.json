{
  "manifest_version": 3,
  "name": "ChatBridge",
  "version": "1.0.0",
  "description": "Manually scan your visible AI chat session and paste it into another AI chat. Local-only by default.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*",
    "https://api-inference.huggingface.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*",
        "*://*.chatgpt.com/*",
        "*://gemini.google.com/*",
        "*://claude.ai/*",
        "*://chat.mistral.ai/*",
        "*://deepseek.ai/*",
        "*://chat.deepseek.com/*",
        "*://www.perplexity.ai/*",
        "*://perplexity.ai/*",
        "*://*.poe.com/*",
        "*://*.x.ai/*",
        "*://copilot.microsoft.com/*",
        "*://www.bing.com/*",
        "*://meta.ai/*",
        "*://huggingface.co/*",
        "*://you.com/*",
        "*://phind.com/*",
        "*://character.ai/*",
        "*://beta.character.ai/*",
        "*://replika.ai/*",
        "*://jasper.ai/*",
        "*://writesonic.com/*",
        "*://app.writesonic.com/*",
        "*://forefront.ai/*",
        "*://open-assistant.io/*",
        "*://kuki.ai/*"
      ],
      "js": [
        "config.js",
        "utils/constants.js",
        "utils/rewriter.js",
        "security.js",
        "adapters.js",
        "storage.js",
        "smartFeatures.js",
        "SegmentEngine.js",
        "IntentAnalyzer.js",
        "MemoryRetrieval.js",
        "smartQueries.js",
        "content_script.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "options_page": "options.html",
  "icons": {
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "iconic.jpeg",
        "logo.png",
        "fonts/Inter-Regular.woff2",
        "fonts/Inter-Bold.woff2"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "quick-scan": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Quick scan current conversation"
    },
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Toggle ChatBridge sidebar"
    },
    "insert-to-chat": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Insert processed text to chat"
    },
    "insight-finder": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Open Insight Finder (semantic spotlight)"
    }
  }
}